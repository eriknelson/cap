{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"redis-master",
      "labels":{
         "app":"redis",
         "role":"master"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "app":"redis",
         "role":"master"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"redis",
               "role":"master"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"redis-master",
                  "image":"$image",
                  "ports":[
                     {
                        "name":"redis-server",
                        "containerPort":$hostport
                     }
                  ],
                  "env":[
                     {
                         "name":"MASTER",
                         "value":"true"
                     }
                  ]
               }
            ]
         }
      }
   }
}
