{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"redis-slave",
      "labels":{
         "app":"redis",
         "role":"slave"
      }
   },
   "spec":{
      "replicas":$instances,
      "selector":{
         "app":"redis",
         "role":"slave"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"redis",
               "role":"slave"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"redis-slave",
                  "image":"$image",
                  "command":[
                     "sh",
                     "-c",
                     "redis-server /etc/redis.conf --bind 0.0.0.0 --slaveof redis-master $master_hostport"
                  ],
                  "ports":[
                     {
                        "name":"redis-server",
                        "containerPort":$hostport
                     }
                  ]
               }
            ]
         }
      }
   }
}
